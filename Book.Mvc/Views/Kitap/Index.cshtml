@model IEnumerable<Book.Mvc.Entity.Kitap>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<div class="container pb-5">

    <h2>Kitaplar</h2>

    <p>
        @Html.ActionLink("Kitap Ekle ", "Create", null, new { @class = "myButton" })
    </p>
    <br />
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Yazar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Puan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tavsiye)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Home)
            </th>


            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                <img src="~/Upload/@item.Image" width="70" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Yazar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Puan)
            </td>
            <td>
                @if (item.Tavsiye)
                {
                    <label class="badge badge-success"> Tavsiye</label>
                }
                else
                {
                    <label class="badge badge-danger">Tavsiye</label>
                }
            </td>
            <td>
                @if (item.Home)
                {
                    <label class="badge badge-success"> Anasayfa</label>
                }
                else
                {
                    <label class="badge badge-danger">Anasayfa</label>
                }
            </td>



            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "myButtonEdit" })
                @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "myButtonDetay" })
                @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "myButtonDel" })
            </td>
        </tr>
        }

    </table>
</div>