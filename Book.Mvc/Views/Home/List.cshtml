@using Book.Mvc.Models;
@model IEnumerable<BookListModel>
@{
    ViewBag.Title = "List";
}

<div class="container pb-5">


    <div class="row">

        <div class="col-md-3">
            @Html.Action("GetCategories","Home")
        </div>

        <div class="col-md-9">
            @if (Model.Count() == 0)   
            {
                <div class="alert alert-warning" role="alert">
                    Bu kategoride kitap yok.
                </div>
            }
            else
            {
                <div class="alert alert-primary" role="alert">
                    @Model.Count()
                </div>
            }
            @Html.Partial("_BookList", Model)

        </div>
    </div>
</div>

